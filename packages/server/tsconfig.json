{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "shared/*": ["../../shared/src/*"]
    }
  },
  "include": ["src/**/*", "../../shared/src/**/*"],
  "exclude": ["node_modules"]
}